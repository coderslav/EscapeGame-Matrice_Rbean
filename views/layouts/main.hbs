                    {{else}}
                        <a class='nav-item btn btn-success' href='/login'>Connexion</a>
                    {{/if}}
                </div>
            </nav>

            {{#if message}}
                <div class='alert {{messageClass}} mt-4' style='text-align: center;' id='messageElement' role='alert'>
                    {{message}}
                </div>
                <script id='scriptElement'>
                    setTimeout(() => { messageElement.remove(); scriptElement.remove(); }, 4000);
                </script>
            {{/if}}

            {{{body}}}

        </div>
