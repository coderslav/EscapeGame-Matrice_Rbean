<html lang='en'>
    <head>
        <meta charset='UTF-8' />
        <title>EscapeBooking</title>

        <link href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh' crossorigin='anonymous' />
    </head>
    <body>
        <div class='container'>

            <nav class='navbar navbar-expand-lg navbar-dark bg-dark d-flex justify-content-between'>
                <a class='navbar-brand' href='/'><b>Home</b></a>
                <div>
                    {{#if user}}
                        {{#if isAdmin}}
                            <a class='nav-item btn btn-warning' style='background-color: rgb(255, 145, 0); border-color:rgb(255, 145, 0); color: white;' href='/admin'>Tableau de bord de l'administrateur de jeux</a>
                        {{/if}}
                        <a class='nav-item btn btn-info' href='/bookings'>Voir mes réservations</a>
                        <a class='nav-item btn btn-danger' href='/logout'>Déconnexion</a>
                    {{else}}
                        <a class='nav-item btn btn-success' href='/logout'>Connexion</a>
                    {{/if}}
                </div>
            </nav>

            {{#if message}}
                <div class='alert {{messageClass}} mt-4' role='alert'>
                    {{message}}
                </div>
            {{/if}}

            {{{body}}}

        </div>
    </body>
</html>