    <body>
        <div class='container'>

            <nav class='navbar navbar-expand-lg navbar-dark bg-dark d-flex justify-content-between'>
                <a class='navbar-brand' href='/'><b>Home</b></a>
                <div>
                    {{#if user}}
                        <span style='color: white; font-weight: bold; margin-right: 1rem;'><i>{{username}}</i></span>
                        {{#if isAdmin}}
                            <a class='nav-item btn btn-warning' style='background-color: rgb(255, 145, 0); border-color:rgb(255, 145, 0); color: white;' href='/admin'>Tableau de bord de l'administrateur de jeux</a>
