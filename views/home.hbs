<div class="container">
    <div class="row">
        {{#each rooms}}
            <div class="col d-flex justify-content-around mb-1 mt-3" style="text-align: center">
                <div class="card-group mt-5">
                        <div class="card" style="width: 18rem;">
                            <img class="card-img-top" src={{imgUrl}}  alt="Card image cap">
                                <div class="card-body">
                                    <h2 class="card-title"><a href="/room/{{id}}" class="card-title stretched-link">{{name}}</a></h2>
                                    <p class="card-text align-text-bottom">{{description}}</p>
                                    <p class="card-text">{{capacity.[0].value}} à {{capacity.[1].value}} joueurs</p>
                                    <p class="card-text">{{price}}€</p>
                                </div>
                        </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>